<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/about_boxes"
        android:backgroundTint="#FFF"
        android:outlineAmbientShadowColor="@color/redcolor">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user">

            </ImageView>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                    >
                    <TextView
                        android:id="@+id/abtcmtsname"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mounika vadlamani"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more2"
                        android:background="#FAFAFA"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--<RatingBar
                        android:layout_margin="5dp"
                        android:id="@+id/rtbProductRating"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:numStars="5"
                        android:rating="3.5"
                        android:isIndicator="false"
                        style="@style/foodRatingBar"
                        />-->
                    <TextView
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_height="wrap_content"
                        android:text="13 January 2019"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:textSize="14dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="yup! comments are shocking like an a......."
            android:ellipsize="end"
            android:maxLength="100"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/redcolor"
                android:textSize="12dp"
                android:id="@+id/reply_button_about_page"
                android:layout_marginRight="5dp"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                android:text="Reply"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:background="@color/lightcolor"/>
            <TextView
                android:textColor="@color/redcolor"
                android:textSize="12dp"
                android:drawablePadding="10dp"
                android:text="0 Replies"
                android:textAllCaps="true"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <!--<TextView
                   android:textColor="@color/black"
                android:textSize="15sp"
                android:drawablePadding="10dp"
                android:layout_marginLeft="20dp"
                android:text="View Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/reply_layout_about_page"
            android:visibility="gone"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  reply here"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="14dp"
                android:backgroundTint="#b8bbc3"
                android:textColorHint="@color/lighttext"
                android:textColor="@color/black"
                android:id="@+id/reply_edit_text_about_page"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/reply_cancel_about_page"
                    android:layout_toLeftOf="@id/reply_submit_about_page"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:layout_marginRight="10dp"
                    android:id="@+id/reply_submit_about_page"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/red"/>
            </RelativeLayout>
        </LinearLayout>





    </LinearLayout>

</android.support.v7.widget.CardView>
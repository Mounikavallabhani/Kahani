<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_margin="3dp"
            android:id="@+id/topstoriesimage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/dammy"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="3dp"
                android:maxLength="18"
                android:id="@+id/topstoriesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardImage"
                android:gravity="left"
                android:text="Sample title"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="3dp"
            android:gravity="left"
            android:layout_marginTop="5dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/editextbackground"
                android:textSize="10sp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BY"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/topstoriespersonname"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIKITH"/>
        </LinearLayout>

        <LinearLayout

            android:layout_marginLeft="3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="4dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="10sp"
                android:textColor="@color/black"
                android:id="@+id/topstoriestime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Min Story"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:drawablePadding="5dp"
               android:drawableLeft="@drawable/eyethree"
                android:id="@+id/topstoriesviews"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.5k"/>
            <TextView
                android:textColor="@color/black"
                android:drawablePadding="5dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/love"
                android:id="@+id/topstoriessubscribes"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.5"/>
        </LinearLayout>

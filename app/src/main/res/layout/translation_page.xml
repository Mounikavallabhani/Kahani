<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/outbox_specific_bordercolor"
    android:backgroundTint="@color/lighttext"
    android:layout_margin="3dp">
    <RelativeLayout
        android:layout_width="165dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:id="@+id/translate_img">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telugu"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:id="@+id/lang_in_eng"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="తెలుగు"
            android:id="@+id/lang_Local"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_above="@id/lang_in_eng"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"/>
    </RelativeLayout>
</FrameLayout>
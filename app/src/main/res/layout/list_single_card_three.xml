<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="135dp"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/button2"
        android:visibility="gone"
        android:gravity="center"
        android:id="@+id/lastcardshortfilm"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/layoutshortfilmcard"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:gravity="center_vertical"
            android:textColor="#000"
            android:id="@+id/cardtitle"
            android:layout_margin="5dp"
            android:text="wqe3qwrerrrrrrrrrrrrrrrrrrrrr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="20"/>
    </LinearLayout>
        <View

        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/editextbackground"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:lineSpacingExtra="5dp"
                android:id="@+id/carddescriptipon"
                android:layout_margin="5dp"
                android:text="wqe3qwrerrrrrrrrrrrrrrrrrrrrr"
                android:ellipsize="end"
                android:textColor="#000"
                android:maxLines="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:layout_width="150dp"
    android:layout_height="183dp"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/button2"
        android:id="@+id/lastcardstories"
        android:visibility="gone"
        android:gravity="center"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/list_series_card_one"
        android:padding="2dp"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical">


        <ImageView
            android:layout_marginTop="10dp"
            android:layout_margin="6dp"
            android:id="@+id/cardImageone"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/dammy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="6dp"
                android:maxLength="18"
                android:id="@+id/cardTitleone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardImage"
                android:gravity="left"
                android:text="Sample title"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="2dp"
             android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/eye"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/cardepisodesone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10.5k"
                    android:textColor="#b8bbc3"
                    android:textSize="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/star"/>
                <TextView
                    android:layout_marginLeft="3dp"
                    android:textColor="#b8bbc3"
                    android:id="@+id/cardsubscribesone"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.5"/>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>